<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:background="#fcf8f8"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/frist_char"
        android:background="#dda51c"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="italic"
        android:gravity="center"
        style="@style/charTextView"
        android:text="E"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/custumer_name_list"
            android:text="islam yassin"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/custumer_email_list"
            android:text="Eng.islamyassin25@gmail.com"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

   <CheckBox
       android:id="@+id/select_email"
       android:checked="false"
       android:layout_width="30dp"
       android:layout_height="30dp" />

</LinearLayout>